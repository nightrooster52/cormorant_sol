package {	import flash.display.MovieClip;	import flash.events.Event;	public class Grass extends MovieClip {		static var numGrass:uint = 0;		var grassState:String = "growing";		public function Grass() {			this.rotation = (Math.random()*20) - 10;			if (Math.random() > .5) {				this.scaleX *=  -1;			}			addEventListener(Event.ENTER_FRAME, update);			numGrass++;		}		private function update(evt:Event):void {			sunUpdate();		}		public function sunUpdate():void {			if (grassState == "growing") {				playForwardGrow();			}			if (grassState == "dying") {				playForwardDie();			}		}		public function playForwardGrow():void {			if (this.currentFrame == 190) {				removeEventListener(Event.ENTER_FRAME, update);				grassState = "grown";			}			else {				nextFrame();			}		}		public function die():void {			grassState = "dying";			addEventListener(Event.ENTER_FRAME, update);		}		public function playForwardDie():void {			if (this.currentFrame == this.framesLoaded) {				removeEventListener(Event.ENTER_FRAME, update);				grassState = "dead";				parent.removeChild(this);			}			else {				nextFrame();			}		}	}}